<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ReportPageLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

<!-- Spinner Dropdown Category -->
	<TextView
        android:id="@+id/tv_report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="24dp"
        android:text="@string/Report"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/ed_report_date"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_search"
        android:drawablePadding="4dip"
        android:drawableRight="@drawable/ic_close"
        android:paddingLeft="10dip"
        android:paddingRight="5dip"
        android:singleLine="true"
        android:inputType="date" 
        android:textColor="#666666"
        android:focusable="false"
        android:textSize="14sp"
        />
     <LinearLayout
        android:id="@+id/linear_report_date"
        android:layout_width="50dp"
        android:layout_height="30dp"
       	android:layout_alignRight="@+id/ed_report_date"
        android:layout_alignTop="@+id/ed_report_date"
  		android:orientation="vertical" >
    </LinearLayout>
     <Button
        android:id="@+id/btn_current_date"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:layout_alignRight="@+id/ed_report_date"
        android:background="@drawable/custom_btn_sandrift"
        android:text="@string/CurrentDate"
        android:textColor="#000000"
        android:textSize="15sp" />

    <Button
        android:id="@+id/btn_report"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_below="@+id/tv_report"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/custom_btn_sandrift"
        android:text="@string/Report"
        android:textColor="#000000"
        android:textSize="15sp" />

   

    

</RelativeLayout>