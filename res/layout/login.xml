<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LoginPageLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

<!-- Spinner Dropdown Category -->
	<TextView
        android:id="@+id/tv_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:text="@string/Category"
        android:textSize="15sp" />
    <Spinner
        android:id="@+id/product_add_caterogy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:prompt="@string/spinner_title"
        android:layout_toRightOf="@+id/tv_category"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="8dip"
        android:layout_marginRight="8dip"
        android:textColor="#000000"
    />
    <!-- Name of Product -->
    <TextView
        android:id="@+id/tv_product_add_name"
        android:layout_below="@+id/product_add_caterogy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:text="@string/ProductName"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/ed_product_add_name"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_below="@+id/product_add_caterogy"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@+id/tv_pass"
        android:background="@drawable/bg_search"
        android:drawablePadding="4dip"
        android:drawableRight="@drawable/ic_close"
        android:paddingLeft="10dip"
        android:paddingRight="5dip"
        android:singleLine="true"
        android:textColor="#666666"
         android:inputType="textEmailAddress"
        android:textSize="14sp" />
    
    <!-- Image of Product -->
    <TextView
        android:id="@+id/tv_product_add_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_product_add_name"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:text="@string/Image"
        android:textSize="15sp" />
    <Spinner
        android:id="@+id/product_add_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ed_product_add_name"
        android:prompt="@string/spinner_title"
        android:layout_toRightOf="@+id/tv_category"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="8dip"
        android:layout_marginRight="8dip"
        android:textColor="#000000"
    />

    <TextView
        android:id="@+id/tv_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_product_add_image"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:text="@string/RetailPrice"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/ed_product_add_retail_price"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_below="@+id/product_add_image"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/bg_search"
        android:drawablePadding="4dip"
        android:drawableRight="@drawable/ic_close"
        android:paddingLeft="10dip"
        android:paddingRight="5dip"
        android:singleLine="true"
        android:textColor="#666666"
        android:inputType="text|textPhonetic" 
        android:textSize="14sp" />
    
    <TextView
        android:id="@+id/tv_who_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_pass"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:text="@string/WholePrice"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/ed_product_add_who_price"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_below="@+id/ed_product_add_retail_price"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/bg_search"
        android:drawablePadding="4dip"
        android:drawableRight="@drawable/ic_close"
        android:paddingLeft="10dip"
        android:paddingRight="5dip"
        android:singleLine="true"
        android:textColor="#666666"
        android:inputType="text|textPhonetic" 
        android:textSize="14sp" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_below="@+id/ed_product_add_who_price"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/custom_btn_sandrift"
        android:text="@string/Login"
        android:textColor="#000000"
        android:textSize="15sp" />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_alignRight="@+id/btn_login"
        android:layout_below="@+id/ed_product_add_who_price"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_btn_sandrift"
        android:text="@string/Register"
        android:textSize="15sp" />

    

</RelativeLayout>